<%- include ("../views/partials/header.ejs") %>
            <div class="form_container">
                <div class="add_student_form">
                    <div class="form-group">
                        <label for="studentId">Student ID</label>
                        <input type="text" id="studentId" placeholder="e.g., 2023CSE014">
                    </div>
                    <div class="form-group">
                        <label for="studentName">Name</label>
                        <input type="text" id="studentName" placeholder="e.g., John Doe">
                    </div>
                    <div class="form-group">
                        <label for="studentAge">Age</label>
                        <input type="number" id="studentAge" placeholder="e.g., 20">
                    </div>
                    <div class="form-group">
                        <label for="studentBranch">Branch</label>
                        <select id="branch">
                            <option>CSE</option>
                            <option>ECE</option>
                            <option>MECH</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="studentYear">Current Year</label>
                        <select id="year">
                            <option>1st</option>
                            <option>2nd</option>
                            <option>3rd</option>
                            <option>4th</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="studentPhone">Phone No</label>
                        <input type="text" id="studentPhone" placeholder="e.g., +1234567890">
                    </div>
                    <button class="sbtbtn" id="submitBtn" >Add Student</button>
                </div>
            </div>
<%- include ("../views/partials/footer.ejs") %>
<script>
    document.getElementById('submitBtn').addEventListener('click', function() {
        const studentData = {
            id:  document.getElementById('studentId').value,
            name: document.getElementById('studentName').value,
            age:  document.getElementById('studentAge').value,
            branch:  document.getElementById('branch').value,
            year:  document.getElementById('year').value,
            phone:  document.getElementById('studentPhone').value
        };

        fetch('/addStudent', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(studentData)
        })
        .then(response => response.json())
        .then(data => {
            alert(data.message);
            window.location.reload();
        })
        .catch(error => {
            console.error('Error:', error);
        });
    });
</script>